<% if @category.categories.any? %>
<subcategories>
  <% @category.categories.each do |c|  %>
    <category>
      <name><%= c.name %></name>
      <url><%= category_url(c, :xml) %></url>
    </category>
  <% end %>
</subcategories>
<% end %>

<% @category.items.each do |i| %>
<%= render partial: 'items/item', locals: { item: i } %>
<% end %>
